{
	// Place your snippets for latex here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	// Theorem-type Settings

	"Theorem": {
		"prefix": "@thm",
		"body": [
			"\\begin{Theorem}",
			"\t$1",
			"\\end{Theorem}"
		]
	}

	"Theorem*": {
		"prefix": "@thm*",
		"body": [
			"\\begin{Theorem*}",
			"\t$1",
			"\\end{Theorem*}"
		]
	}

	"Lemma": {
		"prefix": "@lem",
		"body": [
			"\\begin{Lemma}",
			"\t$1",
			"\\end{Lemma}"
		]
	}

	"Proposition": {
		"prefix": "@prop",
		"body": [
			"\\begin{Proposition}",
			"\t$1",
			"\\end{Proposition}"
		]
	}

	"Corollary": {
		"prefix": "@cor",
		"body": [
			"\\begin{Corollary}",
			"\t$1",
			"\\end{Corollary}"
		]
	}

	"Claim": {
		"prefix": "@claim",
		"body": [
			"\\begin{Claim}",
			"\t$1",
			"\\end{Claim}"
		]
	}

	"Definition": {
		"prefix": "@def",
		"body": [
			"\\begin{Definition}",
			"\t$1",
			"\\end{Definition}"
		]
	}

	"Question": {
		"prefix": "@Q",
		"body": [
			"\\begin{Question}",
			"\t$1",
			"\\end{Question}"
		]
	}

	"Problem": {
		"prefix": "@prob",
		"body": [
			"\\begin{Problem}",
			"\t$1",
			"\\end{Problem}"
		]
	}

	"Example": {
		"prefix": "@ex",
		"body": [
			"\\begin{Example}",
			"\t$1",
			"\\end{Example}"
		]
	}

	"Exercise": {
		"prefix": "@exer",
		"body": [
			"\\begin{Exercise}",
			"\t$1",
			"\\end{Exercise}"
		]
	}

	"Caution": {
		"prefix": "@cau",
		"body": [
			"\\begin{Caution}",
			"\t$1",
			"\\end{Caution}"
		]
	}

	"Remark": {
		"prefix": "@rmk",
		"body": [
			"\\begin{Remark}",
			"\t$1",
			"\\end{Remark}"
		]
	}

	// Mathematical Snipets

	"differential": {
		"prefix": "dee", 
		"body": "\\mathrm{d}" 
	}

	"integral": {
		"prefix": "int",
		"body": "\\int $1 \\, \\mathrm{d}${2}"
	}

	"()": {
		"prefix": "()",
		"body": "\\left( $1 \\right)"
	}

	"[]": {
		"prefix": "[]",
		"body": "\\left[ $1 \\right]"
	}

	"<>": {
		"prefix": "@<",
		"body": "\\langle $1 \\rangle"
	}

	"{}": {
		"prefix": "{}",
		"body": "\\left\\{ $1 \\right\\\\}"
	}

	"{:}": {
		"prefix": "{:}",
		"body": "\\left\\{ $1 \\,:\\, \\right\\\\}"
	}

	"{}_": {
		"prefix": "{}_",
		"body": "\\left \\{ $1 \\right\\\\}_{${2}}"
	}

	"||": {
		"prefix": "@||",
		"body": "\\left| $1 \\right|"
	}

	"||||": {
		"prefix": "@||||",
		"body": "\\left\\| $1 \\right\\|"
	}

	"trianglelefteq" : {
		"prefix": "\\<|",
		"body": "\\trianglelefteq"
	}

	// Mathematical Fonts

	"mathscr" : {
		"prefix": "MSC",
		"body": "\\mathscr{$1}"
	}

	"mathfrak" : {
		"prefix": "MFR",
		"body": "\\mathfrak{$1}"
	}
}